<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBookImage"
        android:layout_width="@dimen/width_image_bottom_sheet"
        android:layout_height="@dimen/height_image_bottom_sheet"
        android:layout_marginHorizontal="@dimen/margin_medium_2"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBookTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/text_regular"
        android:layout_toEndOf="@id/ivBookImage"
        android:layout_marginVertical="@dimen/margin_medium"
        android:layout_toStartOf="@id/ivBookMore"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Title" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBookAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/text_small"
        android:layout_toEndOf="@id/ivBookImage"
        android:layout_below="@id/tvBookTitle"
        android:text="Title" />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBookMore"
        app:srcCompat="@drawable/ic_more_horiz_24"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="@dimen/margin_medium_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>