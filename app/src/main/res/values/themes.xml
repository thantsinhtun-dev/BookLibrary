<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookLibrary" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.BookLibrary.translucentScreenWhiteStatusBar"  parent="Theme.BookLibrary">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopRight">@dimen/margin_medium_2</item>
        <item name="cornerSizeTopLeft">@dimen/margin_medium_2</item>
        <item name="cornerSizeBottomLeft">@dimen/margin_medium_2</item>
        <item name="cornerSizeBottomRight">@dimen/margin_medium_2</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="ImageView.Corner.small" parent="">
        <item name="cornerSizeTopRight">@dimen/margin_medium</item>
        <item name="cornerSizeTopLeft">@dimen/margin_medium</item>
        <item name="cornerSizeBottomLeft">@dimen/margin_medium</item>
        <item name="cornerSizeBottomRight">@dimen/margin_medium</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>